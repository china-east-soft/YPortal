 //jquery验证手机号码

function checkMobil(mobil){
  if(mobil==""){
    jQuery.gritter.add({
      image: '<%= asset_path "notice.png" %>',
      title: '通知',
      text: '手机号码不能为空！'
    }); 
    return false;
  }
  if((/^(1[3|5|8][0-9])\d{8}$/).test(mobil) == false){
    jQuery.gritter.add({
      image: '<%= asset_path "notice.png" %>',
      title: '通知',
      text: '手机号码格式不正确！请重新输入！'
    }); 
    return false;
  }

  return true;
}