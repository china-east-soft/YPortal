/***********************    模块设置  ***********************/
    .main_box .content .leftBox .re_box{ width:320px; border:#ddd solid 1px}
    
    .ic_caption{width:150px;height:120px;position:absolute;opacity:0.8;overflow:hidden; margin:0px;padding:0px;left:0px;right:0px;cursor:default;filter:progid:DXImageTransform.Microsoft.Alpha(opacity=80);}
    .ic_caption .closeIcon,.rightBox .soBox .findGlass,.rightBox .tableBox table .closeI{ background:url(style1/img/homeSet.png?v=2014) no-repeat;}
    .ic_caption .closeIcon{ background-position:0 0; width:22px; height:22px; position:relative; z-index:11}
    .ic_caption .setBtn{ width:50px; height:22px; padding:4px 8px; background:#09F; text-align:center;position:absolute;left:65px; top:30px; color:#fff}
    .ic_caption .infoT{ margin:80px 10px 0px 10px; width:177px;}

    .rightBox {border:#ddd 1px solid;}
    .rightBox .re_box .title{ width:420px; height:40px; line-height:35px; border-bottom:#D7D7D7 2px solid; background:-webkit-gradient(linear,0% 0%, 0% 100%, from(#FFFFFF), to(#EFEFEF), color-stop(0.5,#f0f0f0)); }
    .rightBox .re_box .title input{font:16px/1.25 Microsoft YaHei,Tahoma, arial, \5b8b\4f53; border:0; background:none; font-weight:bold; padding:4px; width:200px}
    .rightBox .re_box .focusImg{ width:400px; height:163px; margin:5px auto 0;border:1px #fff solid}
    .rightBox .re_box .focusImg img{ width:400px; height:163px;}
    .rightBox .re_box .barImg{ width:400px; height:34px; margin:8px auto 0; background:url(<%= image_path('home_bar.png') %>); padding:0 17px 0 70px; line-height:34px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap; color:#e45151}
    .rightBox .re_box .m_box {width: 410px;margin:3px 0 0 5px;}
    .rightBox .re_box .bottmoB{ width:420px; height:102px; background:url(<%= image_path('home_bottom.png') %>); margin-top:8px}
    
    .dragsortBox {list-style-type: none;margin: 0px;}
    .dragsortBox li,.fixationBox{float: left;width: 197px;height: 130px;margin:3px;vertical-align:baseline;position:relative;}
    .dragsortBox div,.fixationBox div{width:197px;height: 130px;text-align: center;}
    .capslide_img_cont,.fixationBox{ border:#d7d7d7 1px solid !important;}
    .dragsortBox div img,.fixationBox div img {width: 70px;height: 70px; margin:15px auto 4px}
    .dragsortBox div span,.fixationBox div span{ width:197px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;}

    #add_mk{ display:none; width:500px; height:310px} 
    #add_mk .title{}
    #add_mk .bbox{ border:#eee 5px solid; text-align:center; padding:15px 20px 30px; width:100px; margin:10px 0 0 10px; line-height:150%;}
    .colorsChange{*margin-top:8px; }
