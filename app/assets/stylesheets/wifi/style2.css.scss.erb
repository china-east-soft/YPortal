#wifi_style2 {
  background: url(<%= asset_path('beijing_02.jpg') %>);
  min-height: 480px;
  height: 100%;
  padding-left: 0;
  padding-right: 0;

  h3 {
    letter-spacing: 0.3em;
    color:#fff;
  }
  h4 {
    margin-top:20px;
    letter-spacing: 0.3em;
    color:#fff;
  }

}


#free_wifi {
  position: absolute;
  width: 100%;
  bottom: 100px;
  img {
    position: relative;
    width: 100px;
    top: 60px;
  }
}

#free_wifi_text {
  padding: 10px;
  font-size: 11px;
  background-color: #f1f1f1;
  color: #25435a;

  @media all and (max-device-width: 720px){
    font-size: 10px;
  }

  @media all and (max-device-width: 640px){
    font-size: 9px;
  }

  @media all and (max-device-width: 320px){
    font-size: 7px;
  }
}

