#wifi_style2 {
  background: url(<%= asset_path('portal_bg2.jpg') %>);
  padding-left: 0;
  padding-right: 0;
  padding-top: 22%;
  padding-bottom: 15%;
  h3 {
    letter-spacing: 0.3em;
    color:#fff;
  }
  h4 {
    margin-top:5%;
    letter-spacing: 0.3em;
    color:#fff;
  }

}

#free_wifi {
  img {
    position: relative;
    width: 100px;
    top: 60px;
  }
}

#free_wifi_text {
  padding: 10px;
  font-size: 11px;
  background-color: #f1f1f1;
  color: #25435a;

  @media all and (max-device-width: 720px){
    font-size: 10px;
  }

  @media all and (max-device-width: 640px){
    font-size: 9px;
  }

  @media all and (max-device-width: 320px){
    font-size: 7px;
  }
}

