<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= title %>
      </header>
      <div class="panel-body">
        <%= simple_form_for [:admin, @landing], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal tasi-form' } do |f| %>

          <%= f.input :start_at, class: "form-control datepicker", "data-dateformat" => "yy-mm-dd", as: :ui_date_picker %>
          <%= f.input :end_at, class: "form-control datepicker", "data-dateformat" => "yy-mm-dd", as: :ui_date_picker %>
          <%= f.input :url %>

          <%= f.input :cover_iphone, as: :file, hint: "最佳分辨率是320x480" %>
          <%= f.input :cover_iphone2x, as: :file, hint: "最佳分辨率为640x960" %>
          <%= f.input :cover_iphone586, as: :file, hint: "最佳分辨率为640x1136" %>
          <%= f.input :cover_andriod, as: :file, hint: "最佳分辨率为1280x720" %>

          <%= f.input :cover_ipad, as: :file, hint: "最佳分辨率为1024x768" %>
          <%= f.input :cover_ipad_retina, as: :file, hint: "最佳分辨率为2048x1536" %>

          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
