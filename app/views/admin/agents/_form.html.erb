<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= title %>
      </header>
      <div class="panel-body">
        <%= simple_form_for [:admin, @agent], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal tasi-form' } do |f| %>

          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <%= f.simple_fields_for :agent_info do |tf| %>
            <%= tf.input :category %>
            <%= tf.input :name %>
            <%= tf.input :industry %>
            <%= tf.input :city %>
            <%= tf.input :contact %>
            <%= tf.input :telephone %>
            <%= tf.input :known_from %>
            <%= tf.input :remark %>
            <%= tf.input :status, collection: [[t(".init"), 'init'], [t(".active"), 'active'], [t(".locked"), 'locked']], selected: t(".#{@agent.agent_info.try(:status)}") %>
          <% end %>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
