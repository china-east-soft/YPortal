  <div class="row">
      <div class="col-lg-12">
          <section class="panel">
              <header class="panel-heading">
                  列表
              </header>
              <div class="panel-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <span class="btn btn-primary" >
                          <%= link_to fa_icon("plus"), new_admin_category_path %>
                        </span>
                    </div>
                </div>
                <div class="space15"></div>

                <table class="table table-striped table-advance table-hover">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @categories.each do |category| %>
                      <tr>
                        <td><%= category.name %></td>
                        <td><%= link_to 'Show', [:admin, category] %></td>
                        <td><%= link_to 'Edit', edit_admin_category_path(category) %></td>
                        <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
              </div>
          </section>
      </div>
  </div>
  <!-- page end-->
