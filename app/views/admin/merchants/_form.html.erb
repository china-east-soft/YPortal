<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= t(".form_elements") %>
      </header>
      <div class="panel-body">
        <%= simple_form_for [:admin, @merchant], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal tasi-form' } do |f| %>

            <%= f.input :mobile, hint: "将作为登陆帐号" %>
            <%= f.input :mid, hint: "设备对应的mid" %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>
            <%= f.simple_fields_for :merchant_info do |tf| %>
              <%= tf.input :name %>
              <%= tf.input :industry %>
              <%= tf.input :province %>
              <%= tf.input :city %>
              <%= tf.input :area %>
              <%= tf.input :circle %>
              <%= tf.input :address %>
              <%= tf.input :contact_way%>
              <%= tf.input :contact_person_name %>
              <%= tf.input :secondary %>
            <% end %>
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
