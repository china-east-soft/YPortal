  <div class="row">
      <div class="col-lg-12">
          <section class="panel">
              <header class="panel-heading">
                  商家列表
              </header>
              <div class="panel-body">
                <div class="clearfix">
                    <div class="btn-group">
                        <span class="btn btn-primary" >
                          <%= link_to fa_icon("plus"), new_admin_merchant_path %>
                        </span>
                    </div>
                </div>
                <div class="space15"></div>

                <table class="table table-striped table-advance table-hover">
                  <thead>
                    <tr>
                      <th><%= t(".mobile") %></th>
                      <th><%= t(".email") %></th>
                      <th><%= t(".name") %></th>
                      <th><%= t(".industry") %></th>
                      <th><%= t(".address") %></th>
                      <th><%= t(".contact_person_name") %></th>
                      <th><%= t(".contact_way") %></th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @merchants.each do |merchant| %>
                      <tr>
                        <td><%= merchant.mobile%></td>
                        <td><%= merchant.email %></td>
                        <td><%= merchant.merchant_info.try(:name) %></td>
                        <td><%= merchant.merchant_info.try(:industry) %></td>
                        <td><%= merchant.merchant_info.try(:full_address) %></td>
                        <td><%= merchant.merchant_info.try(:contact_person_name) %></td>
                        <td><%= merchant.merchant_info.try(:contact_way) %></td>
                        <td>
                          <span class="btn btn-success btn-xs"><%= link_to fa_icon("check"), [:admin, merchant] %></span>
                          <span class="btn btn-primary btn-xs"><%= link_to fa_icon("pencil"), edit_admin_merchant_path(merchant) %><i class="icon-pencil"></i></span>
                          <span class="btn btn-danger btn-xs"><%= link_to fa_icon("trash-o"), [:admin, merchant], method: :delete, data: { confirm: 'Are you sure?' } %></span>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
              </table>
              <div class="row">
                <div class="col-lg-6">
                  <div class="dataTables_info">共有<%= @merchants.total_count %>条记录</div>
                </div>
                <div class="col-lg-6">
                  <div class="dataTables_paginate paging_bootstrap pagination"><%= paginate @merchants %></div>
                </div>
              </div>
            </div>
          </section>
      </div>
  </div>
  <!-- page end-->

