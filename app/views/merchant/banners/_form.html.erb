<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= t(".form_elements") %>
      </header>
      <div class="panel-body">
        <%= simple_form_for [:merchant, @banner], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal tasi-form' } do |f| %>

          <%= f.input :cover, hint: "图片大小必须小于25k, 宽高比为458x257" %>
          <%= f.input :description %>
          <%= f.input :url %>
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>

