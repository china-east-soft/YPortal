<% content_for :main_content do %>
<div class="row">
  <div class="col-lg-12">
      <section class="panel">
          <header class="panel-heading">
              banner
          </header>
          <div class="panel-body">
            <div class="clearfix">
                <div class="btn-group">
                    <button class="btn green" >
                      <%= link_to fa_icon("plus"), new_merchant_banner_path(portal_style_id: @portal_style.id) %>
                    </button>
                </div>
            </div>
            <div class="space15"></div>

            <table class="table table-striped table-advance table-hover">
              <thead>
              <tr>
                  <th>Cover</th>
                  <th colspan="3"></th>
              </tr>
              </thead>
                <tbody>
                <% @banners.each do |banner| %>
                  <tr>
                    <td><%= banner.cover %></td>
                    <td><%= link_to 'Show', [:merchant, banner] %></td>
                    <td><%= link_to 'Edit', edit_merchant_banner_path(banner) %></td>
                    <td><%= link_to 'Destroy', [:merchant, banner], method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
          </table>
          </div>
      </section>
  </div>
</div>
<!-- page end-->
<% end %>

<% content_for :script do %>

<% end %>