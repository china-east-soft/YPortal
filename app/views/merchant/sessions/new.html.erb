<div class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :role => 'form', html: { class: "form-signin" }) do |f| %>
  	<h2 class="form-signin-heading">sign in now</h2>
  	<div class="login-wrap">
		  <%= f.email_field :mobile, :autofocus => true, class: "form-control", placeholder: "E-mail" %>
		  <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
		  <label class="checkbox">
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
	      <span class="pull-right">
	          <a data-toggle="modal" href="#myModal"> Forgot Password?</a>
	      </span>
      </label>
		  <%= f.submit "Sign in", class: "btn btn-lg btn-login btn-block" %>
  	</div>
	<% end %>
</div>
