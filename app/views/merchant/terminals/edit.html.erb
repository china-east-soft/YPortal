<% content_for :main_content do %>
	<%= gflash %>
	<div class="row">
	  <div class="col-lg-12">
	    <section class="panel">
	      <header class="panel-heading">
          <%= t(".form_elements") %>
	      </header>
	      <div class="panel-body">
	        <%= simple_form_for [:merchant, @terminal], :defaults => { :input_html => { :class => "form-control" } }, html: { multipart: true, class: 'form-horizontal tasi-form' } do |f| %> 

	        	<div class="form-group integer optional terminal_beaut_duration">
	        		<%= f.label :beaut_duration %>
	        		<div class="col-sm-7 input-group m-bot15">
	        			<%= f.input_field :beaut_duration %>
	        			<span class="input-group-addon">分钟</span>
	        		</div>
	        	</div>
	          <div class="form-actions">
	            <%= f.button :submit %>
	          </div>
	        <% end %>
	      </div>
	    </section>
	  </div>
	</div>

	<%= link_to t(".show"), [:merchant, @terminal] %> |
	<%= link_to t(".back"), merchant_terminals_path() %>
<% end %>
