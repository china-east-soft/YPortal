<% flash.each do |key,value| %>
  <div class="alert alert-<%=key%>">
    <%= value %>
  </div>
<% end %>
<div class="container">
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">xxxxxxxxxxx</h3>
              </div>
              <div class="panel-body">
                  <%= form_for :account, as: :post, url:  sign_in_wifi_users_path, html: {:role => "form" } do |f| %>
                      <fieldset>
                        <div class="form-group input-group">
                          <span class="input-group-addon"><i class="fa fa-mobile fa-lg"></i></span>
                          <input type="text" name="mobile" value="<%=params[:mobile] %>" class="form-control" placeholder="手机号">
                        </div>
                        <div class="form-group input-group">
                          <span class="input-group-addon"><i class="fa fa-envelope fa-fw"></i></span>
                          <input type="text" name="verify_code" class="form-control" placeholder="验证码">
                        </div>
                        <%= f.hidden_field :vtoken, value: params[:vtoken] %>
                        <%= f.submit "获取验证码", :name => "verify", class: "btn btn-lg btn-success btn-block" %>
                        <%= f.submit "登录", :name => "sign_in", class: "btn btn-lg btn-success btn-block" %>
                      </fieldset>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
</div>