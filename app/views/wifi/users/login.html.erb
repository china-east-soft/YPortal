<% flash.each do |key,value| %>
  <div class="alert alert-<%=key%>">
    <%= value %>
  </div>
<% end %>
<div class="container">
  <div class="row mbot30">
    <div class="col-lg-5 col-xs-12 col-centered">
    <%= render partial: "partial/adv", locals: { title: "登录界面" } %>
    <div class="row span5 col-centered" style="color:#fa3906;margin-top:10px;padding:5px 10px;background-color: #f8eed2;">
      <%= image_tag 'tu_03_03.png',height: '15' %> <span style="margin-left:5px;">热门活动</span>
    </div>
    <div class="row span5 col-centered" style="margin-top:5px;">
    <%= simple_form_for :account, as: :post, url:  sign_in_wifi_users_path,:role => "form", html: { class: "form-signin" } do |f| %>
     
      <div style="padding:5px 10px;">
        <%= f.input_field :mobile, :autofocus => true, class: "form-control input-lg", placeholder: "手机", value: params[:account][:mobile] %>
      </div>

      <div class="form-group" style="padding:3px 10px;margin-bottom:10px;">
        <div class="row">
          <div class=" col-xs-5 col-sm-7 col-lg-7">
            <%= f.input_field :verify_code, class: "form-control input-lg", placeholder: "验证码" %>  
          </div>
          <div class="col-xs-5 col-sm-5 col-lg-5" style="padding-left:0px;padding-top:5px;">
            <a class="btn btn-info" id="send_message">获取验证码</a>
          </div>          
        </div>
      </div>
      <div class="row span5 col-centered" style="font-weight:100;color:#797979;font-size:13px;letter-spacing: 0.2em;">
        <div class="col-lg-offset-3 col-xs-offset-3">
          <div class="checkboxes">
            <label class="label_check" for="checkbox-03">
            <input name="sample-checkbox-02" id="checkbox-03" value="1" type="checkbox"> 我已阅读免责声明并同意。</label>
          </div>
        </div>
      </div>
      <%= f.hidden_field :vtoken, value: params[:vtoken] %>
      <div class="row span5 col-centered text-center" style="margin-top:10px;">
        <%= f.submit "登  录", class: "btn btn-info btn-lg", style: "width:40%" %>
      </div>
      
    <% end %>
    </div>

    <div class="row span5 col-centered " style="color:#514625;background-color:#eecd77;padding:5px 10px;margin-top:15px;">
      其它登录方式
    </div>
    <div class="row span5 col-centered center-block" style="background-color:#e8e08a">
