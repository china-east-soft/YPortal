  <div class="alert alert-<%=key%>">
    <%= value %>
  </div>
<% end %>
<div class="container" >
  <div class="row mbot30">
    <div class="col-lg-5 col-xs-12 col-centered">
      <div class="row span5 col-centered shop_title">
        <h5 class="text-center"><strong>店铺名称</strong></h5>
      </div>
      <div class="span5 about-carousel">
        <div id="myCarousel" class="carousel slide">
            <!-- Carousel items -->
            <div class="carousel-inner">
                <div class="active item">
                    <%= image_tag "about_1.jpg" %>
                    <div class="carousel-caption">
                        <p>Donec luctus ullamcorper nulla</p>
                    </div>
                </div>
